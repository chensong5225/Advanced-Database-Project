<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>MongoServletQ6</servlet-name>
        <servlet-class>MongoServlet.MongoServletQ6</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MongoServletQ2</servlet-name>
        <servlet-class>MongoServlet.MongoServletQ2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NeoQ2</servlet-name>
        <servlet-class>Neo4jServlet.NeoQ2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NeoQ2</servlet-name>
        <url-pattern>/NeoQ2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>xy.controller.loginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BookDetailServlet</servlet-name>
        <servlet-class>xy.controller.BookDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookDetailServlet</servlet-name>
        <url-pattern>/BookDetailServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>xy.controller.AddToCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/AddToCartServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <servlet-class>xy.controller.OrderHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderHistoryServlet</servlet-name>
        <url-pattern>/OrderHistoryServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>xy.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>teachServlet</servlet-name>
        <servlet-class>xy.controller.teachServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teachServlet</servlet-name>
        <url-pattern>/teachServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EasyCheckOut</servlet-name>
        <servlet-class>xy.controller.EasyCheckOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EasyCheckOut</servlet-name>
        <url-pattern>/EasyCheckOut</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>xy.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CartCheckOut</servlet-name>
        <servlet-class>xy.controller.CartCheckOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartCheckOut</servlet-name>
        <url-pattern>/CartCheckOut</url-pattern>
    </servlet-mapping>
  
    <servlet-mapping>
        <servlet-name>MongoServletQ6</servlet-name>
        <url-pattern>/MongoServletQ6</url-pattern>
    </servlet-mapping>
</web-app>
